pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    stages {

        stage("Build") {
            steps {
                script { 
                    buildApp() 
                }
            }
        }

        stage("Deploy - Dev") {
            steps {
                script { 
                    deploy('dev') 
                }
            }
        }

    }
}

// --- FUNCIONES DEFINIDAS ---

def buildApp() {
    echo "Construyendo la imagen..."
    // Entramos en el directorio donde está el Dockerfile
    dir ('section_4/code/cd_pipeline') {
        // Usamos 'bat' en lugar del objeto docker.build para evitar errores de plugin en Windows
        bat "docker build -t hands-on-jenkins/myapp:${BUILD_NUMBER} ."
    }
}

def deploy(environment) {
    echo "Desplegando en entorno: ${environment}"

    def containerName = ''
    def port = ''

    if (environment == 'dev') {
        containerName = "app_dev"
        port = "8888"
    } 
    else {
        error "Entorno no válido: ${environment}"
    }

    // LÓGICA COMPATIBLE CON WINDOWS:
    // Intentamos parar el contenedor. Si falla (porque no existe), hacemos un echo para que Jenkins no pare.
    bat "docker stop ${containerName} || echo El contenedor no estaba corriendo, continuamos..."
    
    // Intentamos borrar el contenedor. Si falla, continuamos.
    bat "docker rm ${containerName} || echo El contenedor no existia, continuamos..."
    
    // Arrancamos el nuevo contenedor
    // Mapeamos el puerto seleccionado (8888) al puerto interno de la app (5000)
    bat "docker run -d -p ${port}:5000 --name ${containerName} hands-on-jenkins/myapp:${BUILD_NUMBER}"
}

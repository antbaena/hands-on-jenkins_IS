pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    stages {

        stage("Build") {
            steps {
                script { 
                    buildApp() 
                }
            }
        }

        stage("Deploy - Dev") {
            steps {
                script { 
                    deploy('dev') 
                }
            }
        }

    }
}

// --- FUNCIONES ---

def buildApp() {
    echo "Construyendo la imagen..."
    // Asegúrate de que la ruta es correcta según tu repositorio
    dir ('section_4/code/cd_pipeline') {
        // Construimos la imagen
        bat "docker build -t hands-on-jenkins/myapp:${BUILD_NUMBER} ."
    }
}

def deploy(environment) {
    echo "Desplegando en entorno: ${environment}"

    def containerName = ''
    def port = ''

    if (environment == 'dev') {
        containerName = "app_dev"
        port = "8888"
    } 
    else {
        error "Entorno no válido: ${environment}"
    }

    // --- CORRECCIÓN CLAVE ---
    // Usamos 'returnStatus: true' para que Jenkins NO falle si el contenedor no existe.
    // Esto es mucho más seguro que usar || en Windows.
    
    echo "Intentando detener contenedor previo..."
    bat(script: "docker stop ${containerName}", returnStatus: true)
    
    echo "Intentando borrar contenedor previo..."
    bat(script: "docker rm ${containerName}", returnStatus: true)
    
    // Este comando SÍ debe ser normal (sin returnStatus) porque si falla el arranque, 
    // queremos que la pipeline falle y nos avise.
    echo "Arrancando nuevo contenedor..."
    bat "docker run -d -p ${port}:5000 --name ${containerName} hands-on-jenkins/myapp:${BUILD_NUMBER}"
}

pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    stages {

        stage("Build") {
            steps {
                // Envolvemos la llamada en 'script' para usar funciones Groovy
                script { 
                    buildApp() 
                }
            }
        }

        stage("Deploy - Dev") {
            steps {
                script { 
                    deploy('dev') 
                }
            }
        }

    }
}

// --- DEFINICIÓN DE FUNCIONES ---

def buildApp() {
    echo "Iniciando Build..."
    // Asegúrate de que esta carpeta existe en tu repo, si no, quita el dir()
    dir ('section_4/code/cd_pipeline') {
        // Usamos 'bat' para Windows
        // El punto '.' al final es CRUCIAL (indica el directorio actual)
        bat "docker build -t hands-on-jenkins/myapp:${BUILD_NUMBER} ."
    }
}

def deploy(environment) {
    echo "Iniciando Deploy en ${environment}..."
    
    def containerName = ''
    def port = ''

    if (environment == 'dev') {
        containerName = "app_dev"
        port = "8888"
    } 
    else {
        // 'error' es la forma correcta de fallar en Jenkins, System.exit rompe la JVM
        error "Environment not valid: ${environment}"
    }

    // Lógica compatible con Windows para limpiar contenedores viejos
    // El "|| echo ..." sirve para que si el comando falla (porque no existe el contenedor), 
    // Jenkins NO pare la ejecución y siga adelante.
    
    echo "Deteniendo contenedor anterior (si existe)..."
    bat "docker stop ${containerName} || echo El contenedor no estaba corriendo"
    
    echo "Borrando contenedor anterior (si existe)..."
    bat "docker rm ${containerName} || echo El contenedor no existia"
    
    echo "Desplegando nuevo contenedor..."
    bat "docker run -d -p ${port}:5000 --name ${containerName} hands-on-jenkins/myapp:${BUILD_NUMBER}"
}
